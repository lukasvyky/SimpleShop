@page
@model AdminIndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="app">
    <button v-on:click="getProducts">Toggle</button>

    <div>
        <p v-for="product in products">
            {{product.id}} -- {{product.name}} -- {{product.description}}
        </p>
    </div>

    <div>
        <input v-model="productModel.name" />
        <input v-model="productModel.description" />
        <input v-model="productModel.value" />
        <button @@click="createProduct">Create Product</button>
    </div>
</div>



@section scripts{
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="~/js/admin/main.js"></script>
}