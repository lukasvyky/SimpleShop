@page "{name}"
@model Shop.UI.Pages.ProductModel
@{
}
<div>
    @if (Model.Product is not null)
    {
    <p>@Model.Product.Name</p>
    <p>@Model.Product.Description</p>
    <p>@Model.Product.Value</p>
    <div>
        <form method="post">
            <label>Stock</label>
            <select asp-for="CartViewModel.StockId">
                @foreach (var stock in Model.Product.Stock)
                {
                    <option value="@stock.Id">@stock.Description</option>
                }
            </select>
            <label>Quantity</label>
            <input asp-for="CartViewModel.Qty"/>
            <button type="submit">Submit</button>
        </form>
    </div>
    }
    else
    {
        <p>Invalid stock</p>
    }
</div>

@await Component.InvokeAsync("Cart")